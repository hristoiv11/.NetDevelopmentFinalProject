<Window x:Class="FinalProjectNET2.AddEducationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjectNET2"
        mc:Ignorable="d"
        Title="AddEducationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Add Education" />

            <StackPanel Orientation="Horizontal">
                <Label Content="Institution Name:" />
                <TextBox x:Name="nameTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Level:" />
                <TextBox x:Name="levelTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Address:" />
                <TextBox x:Name="addressTextBox" />
            </StackPanel>

            <Button x:Name="SubmitButton" Content="Submit" Click="SubmitButton_Click" />

        </StackPanel>

    </Grid>
</Window>
