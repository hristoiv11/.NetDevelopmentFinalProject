<Window x:Class="FinalProjectNET2.WorkExperienceDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjectNET2"
        mc:Ignorable="d"
        Title="WorkExperienceDetailsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Work Experience Details Window" />
            <StackPanel Orientation="Horizontal">
                <Label Content="Company Name:"/>
                <TextBlock x:Name="companyNameTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Job Title:"/>
                <TextBlock x:Name="jobTitleTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Years Spent:"/>
                <TextBlock x:Name="yearsSpentTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="UpdateBTN" Content="Update" Click="UpdateBTN_Click"/>
                <Button x:Name="DeleteBTN" Content="Delete" Click="DeleteBTN_Click"/>

            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
