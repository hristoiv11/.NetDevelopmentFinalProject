<Window x:Class="FinalProjectNET2.AddReferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjectNET2"
        mc:Ignorable="d"
        Title="AddReferenceWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Add Reference" />

            <StackPanel Orientation="Horizontal">
                <Label Content="Name:" />
                <TextBox x:Name="NameTextBox" />
            </StackPanel>



            <StackPanel Orientation="Horizontal">
                <Label Content="Description:" />
                <TextBox x:Name="descriptionTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Phone Number:" />
                <TextBox x:Name="phoneNumberTextBox" />
            </StackPanel>

            <Button x:Name="SubmitButton" Content="Submit" Click="SubmitButton_Click" />

        </StackPanel>

    </Grid>
</Window>
