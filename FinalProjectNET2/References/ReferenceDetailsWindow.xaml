<Window x:Class="FinalProjectNET2.ReferenceDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjectNET2"
        mc:Ignorable="d"
        Title="ReferenceDetailsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" >
            <Label Content="Reference Details Window"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Name :  "/>
                <TextBlock x:Name="NameTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Description :  "/>
                <TextBlock x:Name="descriptionTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Phone Number : "/>
                <TextBlock x:Name="phoneNumberTextBox" />
            </StackPanel>



            <StackPanel Orientation="Horizontal">
                <Button x:Name="UpdateBTN" Content="Update" Click="UpdateBTN_Click"/>
                <Button x:Name="DeleteBTN" Content="Delete" Click="DeleteBTN_Click"/>

            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
