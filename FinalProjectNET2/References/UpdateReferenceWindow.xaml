<Window x:Class="FinalProjectNET2.UpdateReferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjectNET2"
        mc:Ignorable="d"
        Title="UpdateReferenceWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Reference Window"/>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Name"/>
                <TextBox x:Name="nameTextBox"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Description"/>
                <TextBox x:Name="descriptionTextBox"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="PhoneNumber:"/>
                <TextBox x:Name="phoneNumberTextBox"/>
            </StackPanel>

            

            <StackPanel Orientation="Horizontal">
                <Button x:Name="UpdateButton" Content="Update" Click="UpdateButton_Click"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
