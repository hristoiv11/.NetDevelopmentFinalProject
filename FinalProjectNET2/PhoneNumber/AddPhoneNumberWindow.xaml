<Window x:Class="FinalProjectNET2.AddPhoneNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjectNET2"
        mc:Ignorable="d"
        Title="AddPhoneNumberWindow" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Add Phone Number" Style="{StaticResource TitleLabelStyle}" />
            
        <StackPanel Orientation="Horizontal">
                <Label Content="Phone Number:" Style="{StaticResource labels}" />
            <TextBox x:Name="phoneNumberTextBox" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
                <Label Content="Type:" Style="{StaticResource labels}"/>
                <TextBox x:Name="typeTextBox" />
        </StackPanel>

            <Button x:Name="SubmitButton" Content="Submit" Click="SubmitButton_Click" Style="{StaticResource PrimaryB}"/>

        </StackPanel>
    </Grid>
</Window>
