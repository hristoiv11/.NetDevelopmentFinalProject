<Window x:Class="FinalProjectNET2.AddHobbieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjectNET2"
        mc:Ignorable="d"
        Title="AddHobbieWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Add Hobbie" />

            <StackPanel Orientation="Horizontal">
                <Label Content="Description:" />
                <TextBox x:Name="descriptionTextBox" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Type:" />
                <TextBox x:Name="typeTextBox" />
            </StackPanel>

            <Button x:Name="SubmitButton" Content="Submit" Click="SubmitButton_Click" />

        </StackPanel>
    </Grid>
</Window>
